#include <dt-bindings/zmk/matrix_transform.h>
#include <layouts/cuddlykeyboards/ferris.dtsi>

&cuddlykeyboards_ferris_layout {
    transform = <&matrix_transform>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
    };

    matrix_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <10>;

        map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                               RC(3,3)  RC(3,4)     RC(3,5) RC(3,6)
        >;
    };

    kscan_left: kscan_left {
        compatible = "zmk,kscan-gpio-matrix";

        diode-direction = "col2row";

        // Rows: Q row = D4, then D5, D6, D7
        row-gpios
        = <&pro_micro_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        ;

        // Cols (left → right):
        // D18 (A4), D15 (A1), D14 (A0), D16 (A2), D10
        col-gpios
        = <&pro_micro_a 4 GPIO_ACTIVE_HIGH>   /* D18 / A4 */
        , <&pro_micro_a 1 GPIO_ACTIVE_HIGH>   /* D15 / A1 */
        , <&pro_micro_a 0 GPIO_ACTIVE_HIGH>   /* D14 / A0 */
        , <&pro_micro_a 2 GPIO_ACTIVE_HIGH>   /* D16 / A2 */
        , <&pro_micro_d 10 GPIO_ACTIVE_HIGH>  /* D10 */
        ;
    };

    kscan_right: kscan_right {
        compatible = "zmk,kscan-gpio-matrix";

        diode-direction = "row2col";

        // Rows: Q row = D4, then D5, D6, D7
        row-gpios
        = <&pro_micro_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        , <&pro_micro_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        ;

        // Cols (left → right):
        // D10, D16 (A2), D14 (A0), D15 (A1), D18 (A4)
        col-gpios
        = <&pro_micro_d 10 GPIO_ACTIVE_HIGH>  /* D10 */
        , <&pro_micro_a 2 GPIO_ACTIVE_HIGH>   /* D16 / A2 */
        , <&pro_micro_a 0 GPIO_ACTIVE_HIGH>   /* D14 / A0 */
        , <&pro_micro_a 1 GPIO_ACTIVE_HIGH>   /* D15 / A1 */
        , <&pro_micro_a 4 GPIO_ACTIVE_HIGH>   /* D18 / A4 */
        ;
    };
};
